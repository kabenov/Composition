<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".presentation.GameFinishedFragment">

    <ImageView
        android:id="@+id/image_view_game_finished_smile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="48dp"
        android:contentDescription="@string/game_finished_fragment_smile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_game_finished_required_answers"
        tools:srcCompat="@drawable/ic_smile" />

    <TextView
        android:id="@+id/text_view_game_finished_required_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/game_finished_fragment_required_answer"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_game_finished_score_answers"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_view_game_finished_score_answers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/game_finished_fragment_score_answer"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintStart_toStartOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintEnd_toEndOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintBottom_toTopOf="@id/text_view_game_finished_required_percent" />

    <TextView
        android:id="@+id/text_view_game_finished_required_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/game_finished_fragment_required_percent"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_game_finished_score_answers"
        app:layout_constraintStart_toStartOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintEnd_toEndOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintBottom_toTopOf="@id/text_view_game_finished_percent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/text_view_game_finished_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/game_finished_fragment_percent"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_game_finished_required_percent"
        app:layout_constraintStart_toStartOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintEnd_toEndOf="@id/text_view_game_finished_required_answers"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/button_game_finished_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_finished_fragment_button_retry"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>